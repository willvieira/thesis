isbn = {0027-8424},
issn = {0027-8424},
journal = {Proceedings of the National Academy of Sciences},
number = {16},
pages = {E3276--E3284},
pmid = {28348212},
title = {{Climate change both facilitates and inhibits invasive plant ranges in New England}},
url = {http://www.pnas.org/lookup/doi/10.1073/pnas.1609633114},
