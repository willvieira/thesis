doi = {10.1111/1365-2745.12804},
file = {:Users/wvieira/Documents/Mendeley Desktop/Journal of Ecology - 2017 - Clark - Functional traits of tropical trees and lianas explain spatial structure across.pdf:pdf},
issn = {13652745},
journal = {Journal of Ecology},
keywords = {Barro Colorado Island,aggregation,plant population and community dynamics,spatial analysis,spatial moment model,species functional traits,tropical forest dynamics,wavelet variance},
