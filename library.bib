issn = {03781127},
journal = {Forest Ecology and Management},
keywords = {Disturbance,Landscape,Model,Risk,Spatial,Stochastic},
pages = {542--554},
publisher = {Elsevier B.V.},
title = {{Incorporating uncertainty into forest management planning: Timber harvest, wildfire and climate change in the boreal forest}},
url = {http://dx.doi.org/10.1016/j.foreco.2017.06.039},
