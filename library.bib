doi = {https://doi.org/10.1890/10-0312.1},
journal = {Ecology},
keywords = {Forest Inventory and Analysis (FIA),biogeography of temperate trees,climate niche breadth,climatic range limits,northeastern United States,realized niches of temperate trees,relative abundance vs. local frequency},
