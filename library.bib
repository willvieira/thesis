doi = {10.1111/1365-2745.13446},
journal = {Journal of Ecology},
pages = {0--3},
title = {{An alternate vegetation type proves resilient and persists for decades following forest conversion in the North American boreal biome}},
url = {https://besjournals.onlinelibrary.wiley.com/doi/abs/10.1111/1365-2745.13446?af=R{\&}utm{\_}source=researcher{\_}app{\&}utm{\_}medium=referral{\&}utm{\_}campaign=RESR{\_}MRKT{\_}Researcher{\_}inbound},
