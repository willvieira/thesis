title = {{Estimates of species extinctions from species-area relationships strongly depend on ecological context}},
url = {http://dx.doi.org/10.1111/j.1600-0587.2013.00448.x http://doi.wiley.com/10.1111/j.1600-0587.2013.00448.x},
volume = {37},
