eprint = {arXiv:1308.3114v1},
file = {:Users/wvieira/Documents/Mendeley Desktop/Hartig et al. - 2014 - On the sympatric evolution and evolutionary stability of coexistence by relative nonlinearity of competition.pdf:pdf},
issn = {19326203},
journal = {PLoS ONE},
