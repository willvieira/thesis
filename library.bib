journal = {Frontiers in Plant Science},
keywords = {Acclimation,Assisted migration,Climate change,Local adaptation,Mineral nutrition,Photosynthesis before bud break,Vector analysis,White spruce,assisted migration,climate change,white spruce},
number = {January},
pages = {1--17},
