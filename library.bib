journal = {Journal of Vegetation Science},
keywords = {1961,1972,agathis,allan,and silba,araucaria,conifer-angiosperm forest,de laubenfels,long-term dynamics,nomenclature,recruitment,stand replacement model},
month = {dec},
number = {6},
