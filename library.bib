file = {:Users/wvieira/Documents/Mendeley Desktop/Journal of Ecology - 2016 - Crone - Contrasting effects of spatial heterogeneity and environmental stochasticity on.pdf:pdf},
issn = {13652745},
journal = {Journal of Ecology},
keywords = {Dispersal,Environmental stochasticity,Generalized linear model,Integral projection model,Plant population and community dynamics,Source-sink dynamics,Spatial heterogeneity},
