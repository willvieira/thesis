issn = {13652486},
journal = {Global Change Biology},
keywords = {Chamaecrista fasciculata,Climate change,Flowering time,Fruiting time,Growing degree days,Natural selection,Phenology,Plasticity},
number = {10},
pages = {3786--3799},
title = {{The success of assisted colonization and assisted gene flow depends on phenology}},
volume = {21},
year = {2015}
}
