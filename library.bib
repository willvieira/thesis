doi = {10.1016/j.foreco.2017.03.010},
file = {:Users/wvieira/Documents/Mendeley Desktop/Willms et al. - 2017 - The effects of thinning and burning on understory vegetation in North America A meta-analysis.pdf:pdf},
issn = {03781127},
journal = {Forest Ecology and Management},
keywords = {Burning,Disturbance,Fire surrogates,Forest understory,Fuels reduction,Meta-analysis,Non-native understory vegetation,Thinning},
pages = {184--194},
title = {{The effects of thinning and burning on understory vegetation in North America: A meta-analysis}},
