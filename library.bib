isbn = {0028-0836},
issn = {0028-0836},
journal = {Nature},
number = {7374},
pages = {517--520},
pmid = {22012261},
title = {{Changes in plant community composition lag behind climate warming in lowland forests}},
url = {http://www.nature.com/doifinder/10.1038/nature10548},
volume = {479},
