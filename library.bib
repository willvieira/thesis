number = {1523},
pages = {1433--1440},
pmid = {12965006},
title = {{The role of phenotypic plasticity in driving genetic evolution}},
url = {http://rspb.royalsocietypublishing.org/cgi/doi/10.1098/rspb.2003.2372},
