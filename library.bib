file = {:Users/wvieira/Documents/Mendeley Desktop/Yackulic - 2017 - Competitive exclusion over broad spatial extents is a slow process evidence and implications for species distribution.pdf:pdf},
isbn = {6503251521},
issn = {16000587},
journal = {Ecography},
number = {2},
pages = {305--313},
title = {{Competitive exclusion over broad spatial extents is a slow process: evidence and implications for species distribution modeling}},
volume = {40},
year = {2017}
