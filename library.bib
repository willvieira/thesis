issn = {03781127},
journal = {Forest Ecology and Management},
keywords = {Canopy cover,Climate change,Enrichment planting,Seedling survival,Temperature,Tree regeneration},
number = {August 2018},
pages = {427--435},
publisher = {Elsevier},
title = {{Effects of environmental filters on early establishment of cloud forest trees along elevation gradients: Implications for assisted migration}},
