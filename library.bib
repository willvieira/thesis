isbn = {0006-3207},
issn = {00063207},
journal = {Biological Conservation},
keywords = {Empty forests,Herbivory,Maxent,Seed dispersal,Top-down regulation,Trophic downgrading},
pages = {49--57},
publisher = {Elsevier Ltd},
title = {{Mammal defaunation as surrogate of trophic cascades in a biodiversity hotspot}},
