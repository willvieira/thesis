keywords = {Conifers,Conservation,Mining,New Caledonia,Threatened species,Ultramafic substrates},
number = {5},
pages = {1485--1502},
title = {{Threats to the conifer species found on New Caledonia's ultramafic massifs and proposals for urgently needed measures to improve their protection}},
