issn = {1058-5893},
journal = {International Journal of Plant Sciences},
month = {nov},
number = {6},
pages = {699--715},
title = {{Functional Morphology of Saccate Pollen in Conifers with Special Reference to Podocarpaceae}},
url = {http://www.journals.uchicago.edu/doi/10.1086/297209},
volume = {155},
year = {1994}
}
