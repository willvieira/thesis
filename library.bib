issn = {0003-0147},
journal = {The American Naturalist},
keywords = {demography,geographic range,popula-,species borders,species distribution modeling,tion projection matrixes},
number = {S1},
pages = {S26--S43},
pmid = {21956090},
title = {{The Geography of Demography: Long-Term Demographic Studies and Species Distribution Models Reveal a Species Border Limited by Adaptation}},
