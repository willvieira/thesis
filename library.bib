issn = {13652745},
journal = {Journal of Ecology},
keywords = {boreal forest,climate change,ecotone,priority effects,recruitment,species migration,species range,temperate forest},
month = {oct},
pages = {1365--2745.13311},
title = {{Priority effects will impede range shifts of temperate tree species into the boreal forest}},
url = {https://onlinelibrary.wiley.com/doi/abs/10.1111/1365-2745.13311},
year = {2019}
}
@article{Cordonnier2018,
