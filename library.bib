journal = {Diversity and Distributions},
keywords = {Competition,Fragmentation,Microsatellites,Natural regeneration,New Caledonia,Seed dispersal},
number = {3},
pages = {248--259},
title = {{Importance of demography and dispersal for the resilience and restoration of a critically endangered tropical conifer Araucaria nemorosa}},
