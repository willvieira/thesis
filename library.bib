journal = {Journal of Ecology},
keywords = {Environmental variables,Genetic diversity,Population structure,Proteaceae,Rain forests,Rare canopy tree,Resprouting potential,Seed dispersal,Small populations,Trait dimensions},
month = {oct},
number = {5},
pages = {906--917},
title = {{The tension between dispersal and persistence regulates the current distribution of rare palaeo-endemic rain forest flora: a case study}},
url = {http://doi.wiley.com/10.1111/j.1365-2745.2005.01046.x},
