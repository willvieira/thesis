doi = {10.1016/j.ppees.2013.02.001},
file = {:Users/wvieira/Documents/Mendeley Desktop/Hintze et al. - 2013 - D3 The Dispersal and Diaspore Database - Baseline data and statistics on seed dispersal.pdf:pdf},
