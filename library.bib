keywords = {alternative stable states,biodiversity–ecosystem functioning,novel ecosystems,response diversity,restoration,social–ecological system,sustainable forest management,theory and practice},
number = {1},
pages = {12--27},
title = {{Biodiversity and ecosystem services in forest ecosystems: a research agenda for applied forest ecology}},
volume = {54},
year = {2017}
}
