arxivId = {arXiv:1011.1669v3},
author = {Holling, C S},
doi = {10.1146/annurev.es.04.110173.000245},
eprint = {arXiv:1011.1669v3},
file = {:Users/wvieira/Documents/Mendeley Desktop/Holling - 1973 - Resilience and Stability of Ecological Systems.pdf:pdf},
isbn = {00664162},
issn = {0066-4162},
journal = {Annual Review of Ecology and Systematics},
number = {1},
pages = {1--23},
pmid = {22160726},
title = {{Resilience and Stability of Ecological Systems}},
url = {http://www.annualreviews.org/doi/10.1146/annurev.es.04.110173.000245},
volume = {4},
