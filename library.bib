keywords = {Alpha diversity,Animal behavior,Arecaceae,Ateles belzebuth,Destination-based seed dispersal,Frugivory,Genetic structure,Maternal seed source diversity,Oenocarpus bataua,Palm,Primate},
pages = {50--58},
