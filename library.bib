journal = {Ecological Applications},
keywords = {Corridors,Habitat abundance,Hyperspectral remote sensing,Invasion rate,Lepidium latifolium (perennial pepperweed),Regeneration niche,Simulation model,Spread rate},
month = {apr},
number = {3},
pages = {593--608},
pmid = {20437950},
title = {{The effects of temporally variable dispersal and landscape structure on invasive species spread}},
