keywords = {3D,Arable crops,Canopy,Individual-based model,Light availability,Voxel,Weeds},
month = {feb},
pages = {101--110},
title = {{A 3D model for light interception in heterogeneous crop:weed canopies: Model structure and evaluation}},
url = {http://www.sciencedirect.com/science/article/pii/S0304380012005261},
volume = {250},
year = {2013}
}
