journal = {Global Ecology and Biogeography},
keywords = {biotic interactions,climate change,demography,local adaptation,migration,provenance,range shift,regeneration temperate–boreal ecotone},
number = {12},
pages = {1507--1519},
title = {{Local adaptation of trees at the range margins impacts range shifts in the face of climate change}},
volume = {27},
year = {2018}
}
