pages = {221--232},
publisher = {Elsevier B.V.},
title = {{Biodiversity response to intensive biomass production from forest thinning in North American forests - A meta-analysis}},
url = {http://dx.doi.org/10.1016/j.foreco.2010.10.010},
volume = {261},
year = {2011}
