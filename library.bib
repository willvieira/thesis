issn = {20411723},
journal = {Nature Communications},
number = {1},
pages = {1--10},
publisher = {Springer US},
title = {{Beneficial effects of climate warming on boreal tree growth may be transitory}},
url = {http://dx.doi.org/10.1038/s41467-018-05705-4},
volume = {9},
year = {2018}
}
