isbn = {1439-1791},
issn = {14391791},
journal = {Basic and Applied Ecology},
keywords = {Anthropochory,Brassica napus L.,Dispersal kernel,Expansion rate,Genetically modified (GM) plants,Invasion model,Selective advantage,Vehicle-dispersed species},
number = {5},
pages = {533--541},
title = {{Measuring and modelling anthropogenic secondary seed dispersal along roadverges for feral oilseed rape}},
