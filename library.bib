issn = {01678809},
journal = {Agriculture, Ecosystems and Environment},
keywords = {Arable weeds,Biodiversity,Functional groups,Herbicides,RLQ-analysis,Tillage systems},
pages = {147--155},
publisher = {Elsevier B.V.},
title = {{Trajectories of weed communities explained by traits associated with species' response to management practices}},
url = {http://dx.doi.org/10.1016/j.agee.2012.06.005},
volume = {158},
year = {2012}
