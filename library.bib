isbn = {10510761},
issn = {10510761},
journal = {Ecological Applications},
keywords = {Black spruce,Boreal forest,Chronosequence,Fire severity,Long-term forest productivity,Paleoecology,Paludification,Picea mariana,Pleurozium schreberi,Quebec, Canada,Site index,Soil organic matter,Sphagnum spp.},
