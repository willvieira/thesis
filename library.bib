doi = {10.3732/ajb.1400340},
issn = {00029122},
journal = {American Journal of Botany},
keywords = {Antarctica,Assemblage,Australia,Biogeography,Gondwana,New Zealand,Old World tropics,Paleobotany,Patagonia,Rainforest},
number = {12},
pages = {2121--2135},
