keywords = {Biomass,Boreal,Climate change,Community,Growth,Modeling,Process-based,Succession,Temperate},
number = {July},
pages = {284--294},
publisher = {Elsevier},
title = {{Rapid 21st century climate change projected to shift composition and growth of Canada's Acadian Forest Region}},
url = {http://dx.doi.org/10.1016/j.foreco.2017.07.033},
volume = {405},
year = {2017}
}
