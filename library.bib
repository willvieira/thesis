issn = {14668238},
journal = {Global Ecology and Biogeography},
keywords = {Bayesian,climate change,demography,life stage,range dynamics,recruitment,species distribution modelling,tree seedlings,western United States},
number = {1},
pages = {102--116},
title = {{Multi-scale integration of tree recruitment and range dynamics in a changing climate}},
volume = {29},
year = {2020}
}
@article{Ansong2013,
