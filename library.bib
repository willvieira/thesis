month = {may},
number = {3},
pages = {583--592},
pmid = {23016803},
title = {{Evaluating contemporary pollen dispersal in two common grassland species Ranunculus bulbosus L. (Ranunculaceae) and Trifolium montanum L. (Fabaceae) using an experimental approach}},
