isbn = {0888-8892},
issn = {08888892},
journal = {Conservation Biology},
keywords = {Long-distance plant dispersal,Plant invasions,Roadside flora,Seed rain,Vehicle plant dispersal},
number = {4},
pages = {986--996},
pmid = {17650249},
title = {{Long-distance dispersal of plants by vehicles as a driver of plant invasions}},
volume = {21},
year = {2007}
}
