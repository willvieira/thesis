isbn = {0378-1127},
issn = {03781127},
journal = {Forest Ecology and Management},
keywords = {Betula pendula,Biodiversity,Conversion management,Multi-criteria analysis,Pinus sylvestris,Quercus robur,Scenario modelling,Stand structure},
