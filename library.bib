pages = {855--868},
title = {{Pollen movement within a continuous forest of wind-pollinated {\textless}i{\textgreater}Araucaria angustifolia{\textless}/i{\textgreater}, inferred from paternity and TwoGener analysis}},
url = {http://link.springer.com/10.1007/s10592-007-9411-2},
volume = {9},
