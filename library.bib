doi = {10.3389/fpls.2017.02214},
issn = {1664462X},
journal = {Frontiers in Plant Science},
keywords = {Acclimation,Assisted migration,Climate change,Local adaptation,Mineral nutrition,Photosynthesis before bud break,Vector analysis,White spruce},
number = {January},
pages = {1--17},
title = {{Ecophysiology and growth of white spruce seedlings from various seed sources along a climatic gradient support the need for assisted migration}},
